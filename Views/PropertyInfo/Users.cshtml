@model IEnumerable<newRepo.Models.Users>

@{
    ViewData["Title"] = "Details";
}

<h2>Users</h2>

<p>
    <a asp-action="Create">Assets Management</a>
</p>
@{
    int rowNo = 0; 
}
<table class="table">
    <thead>
        <tr>
            <th>
                <a>No.</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @(rowNo += 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Assets</a>
                </td>
            </tr>
        }
    </tbody>
</table>
